<div class="container">
  <div class="row mb-4">
    <div class="col-12">
      <h1>Food Categories</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-light">
            <tr>
              <th>Category</th>
              <th>Description</th>
              <th>Number of Foods</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @food_categories.each do |category| %>
              <tr>
                <td><%= link_to category.name, food_category_path(category) %></td>
                <td><%= category.description %></td>
                <td><span class="badge bg-primary"><%= category.foods.count %></span></td>
                <td>
                  <%= link_to "View Foods", food_category_path(category), class: "btn btn-sm btn-outline-primary" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <% if @food_categories.respond_to?(:total_pages) %>
    <div class="row">
      <div class="col-12">
        <%= paginate @food_categories %>
      </div>
    </div>
  <% end %>
</div>